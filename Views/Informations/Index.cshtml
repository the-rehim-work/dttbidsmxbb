@model Information;
@using dttbidsmxbb.Models.Enum
@{
    ViewData["Title"] = "Məlumatlar";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Məlumatlar</h4>
    <div class="d-flex gap-2">
        <div class="form-check form-switch d-flex align-items-center me-3">
            <input class="form-check-input" type="checkbox" id="showDeletedToggle" />
            <label class="form-check-label ms-2" for="showDeletedToggle">Silinmişləri göstər</label>
        </div>
        <div class="btn-group">
            <a asp-controller="Export" asp-action="Excel" class="btn btn-success btn-sm">Excel</a>
            <a asp-controller="Export" asp-action="Pdf" class="btn btn-warning btn-sm">PDF</a>
            <a asp-controller="Export" asp-action="Word" class="btn btn-primary btn-sm text-white">Word</a>
        </div>
        <button type="button" class="btn btn-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#importModal">İdxal</button>
        <a asp-controller="Informations" asp-action="Create" class="btn btn-primary btn-sm">Yeni məlumat</a>
    </div>
</div>

<div class="accordion mb-3" id="filterAccordion">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button py-2" type="button" data-bs-toggle="collapse" data-bs-target="#filterPanel" aria-expanded="true" aria-controls="filterAccordion">
                <span class="me-2">Filtrlər</span>
                <span id="activeFilterCount" class="badge bg-primary d-none">0</span>
            </button>
        </h2>
        <div id="filterPanel" class="accordion-collapse collapse show" data-bs-parent="#filterAccordion">
            <div class="accordion-body py-3">

                <div class="row g-2 mb-3 filter-row-equal">
                    <div class="col-2">
                        <label for="f_senderMilitaryBaseIds">@Html.DisplayNameFor(m => m.SenderMilitaryBase)</label>
                        <select id="f_senderMilitaryBaseIds"
                                class="form-control w-100 filter-select2"
                                asp-items="ViewBag.MilitaryBases"
                                multiple>
                        </select>
                    </div>

                    <div class="col-2">
                        <label for="f_militaryBaseIds">@Html.DisplayNameFor(m => m.MilitaryBase)</label>
                        <select id="f_militaryBaseIds"
                                class="form-control filter-select2"
                                asp-items="ViewBag.MilitaryBases"
                                multiple>
                        </select>
                    </div>

                    <div class="col-2">
                        <label for="f_sentSerialNumberQuery">@Html.DisplayNameFor(m => m.SentSerialNumber)</label>
                        <input id="f_sentSerialNumberQuery"
                               class="form-control text-filter-input"
                               placeholder="Məsələn: 0/0" />
                    </div>

                    <div class="col-2">
                        <label for="f_sentDateRange">@Html.DisplayNameFor(m => m.SentDate)</label>
                        <input id="f_sentDateRange"
                               class="form-control filter-el"
                               placeholder="Tarix aralığı seçin..."
                               autocomplete="off" />
                    </div>

                    <div class="col-2">
                        <label for="f_receivedSerialNumberQuery">@Html.DisplayNameFor(m => m.ReceivedSerialNumber)</label>
                        <input id="f_receivedSerialNumberQuery"
                               class="form-control text-filter-input"
                               placeholder="Məsələn: 0/0" />
                    </div>

                    <div class="col-2">
                        <label for="f_receivedDateRange">@Html.DisplayNameFor(m => m.ReceivedDate)</label>
                        <input id="f_receivedDateRange"
                               class="form-control filter-el"
                               placeholder="Tarix aralığı seçin..."
                               autocomplete="off" />
                    </div>
                </div>

                <hr /> 

                <div class="row g-2 mb-3 filter-row-equal">
                    <div class="col-2">
                        <label for="f_privacyLevels">@Html.DisplayNameFor(m => m.PrivacyLevel)</label>
                        <select id="f_privacyLevels"
                                class="form-control filter-select2"
                                multiple>
                            <option value="@((int)PrivacyLevel.TopSecret)">Tam məxfi</option>
                            <option value="@((int)PrivacyLevel.Secret)">Məxfi</option>
                        </select>
                    </div>

                    <div class="col-2">
                        <label for="f_formalizationSentSerialQuery">@Html.DisplayNameFor(m => m.SendAwaySerialNumber)</label>
                        <div class="input-group input-group-sm">
                            <input id="f_formalizationSentSerialQuery"
                                   class="form-control text-filter-input"
                                   placeholder="Məsələn: 0/0" />
                            <select id="f_formalizationSentSerialNull" class="form-select null-filter-select">
                                <option value="">Hamısı</option>
                                <option value="notnull">Dolu</option>
                                <option value="null">Boş</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-2">
                        <label for="f_formalizationSentDateRange">@Html.DisplayNameFor(m => m.SendAwayDate)</label>
                        <div class="input-group input-group-sm">
                            <input id="f_formalizationSentDateRange"
                                   class="form-control filter-el"
                                   placeholder="Tarix aralığı seçin..."
                                   autocomplete="off" />
                            <select id="f_formalizationSentDateNull" class="form-select null-filter-select">
                                <option value="">Hamısı</option>
                                <option value="notnull">Dolu</option>
                                <option value="null">Boş</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-2">
                        <label for="f_executorIds">@Html.DisplayNameFor(m => m.Executor)</label>
                        <select id="f_executorIds"
                                class="form-control filter-select2"
                                asp-items="ViewBag.Executors"
                                multiple>
                        </select>
                    </div>

                    <div class="col-2">
                        <label for="f_formalizationSerialQuery">@Html.DisplayNameFor(m => m.FormalizationSerialNumber)</label>
                        <div class="input-group input-group-sm">
                            <input id="f_formalizationSerialQuery"
                                   class="form-control text-filter-input"
                                   placeholder="Məsələn: 0/0" />
                            <select id="f_formalizationSerialNull" class="form-select null-filter-select">
                                <option value="">Hamısı</option>
                                <option value="notnull">Dolu</option>
                                <option value="null">Boş</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-2">
                        <label for="f_formalizationDateRange">@Html.DisplayNameFor(m => m.FormalizationDate)</label>
                        <div class="input-group input-group-sm">
                            <input id="f_formalizationDateRange"
                                   class="form-control filter-el"
                                   placeholder="Tarix aralığı seçin..."
                                   autocomplete="off" />
                            <select id="f_formalizationDateNull" class="form-select null-filter-select">
                                <option value="">Hamısı</option>
                                <option value="notnull">Dolu</option>
                                <option value="null">Boş</option>
                            </select>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="row g-2 mb-3 filter-row-equal">
                    <div class="col-3">
                        <label for="f_militaryRankIds">@Html.DisplayNameFor(m => m.MilitaryRank)</label>
                        <select id="f_militaryRankIds"
                                class="form-control filter-select2"
                                asp-items="ViewBag.MilitaryRanks"
                                multiple>
                        </select>
                    </div>

                    <div class="col-3">
                        <label for="f_regardingPositionQuery">@Html.DisplayNameFor(m => m.RegardingPosition)</label>
                        <input id="f_regardingPositionQuery"
                               class="form-control text-filter-input"
                               placeholder="@Html.DisplayNameFor(m => m.RegardingPosition)" />
                    </div>

                    <div class="col-3">
                        <label for="f_positionQuery">@Html.DisplayNameFor(m => m.Position)</label>
                        <input id="f_positionQuery"
                               class="form-control text-filter-input"
                               placeholder="@Html.DisplayNameFor(m => m.Position)" />
                    </div>

                    <div class="col-3">
                        <label for="f_assignmentDateRange">@Html.DisplayNameFor(m => m.AssignmentDate)</label>
                        <input id="f_assignmentDateRange"
                               class="form-control filter-el"
                               placeholder="Tarix aralığı seçin..."
                               autocomplete="off" />
                    </div>
                </div>

                <hr />

                <div class="row g-2 mb-3 filter-row-equal">
                    <div class="col-3">
                        <label for="f_lastnameQuery">@Html.DisplayNameFor(m => m.Lastname)</label>
                        <div class="input-group input-group-sm">
                            <input id="f_lastnameQuery"
                                   class="form-control text-filter-input"
                                   placeholder="@Html.DisplayNameFor(m => m.Lastname)" />
                            <select id="f_lastnameNull" class="form-select null-filter-select">
                                <option value="">Hamısı</option>
                                <option value="notnull">Dolu</option>
                                <option value="null">Boş</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-3">
                        <label for="f_firstnameQuery">@Html.DisplayNameFor(m => m.Firstname)</label>
                        <input id="f_firstnameQuery"
                               class="form-control text-filter-input"
                               placeholder="@Html.DisplayNameFor(m => m.Firstname)" />
                    </div>

                    <div class="col-3">
                        <label for="f_fathernameQuery">@Html.DisplayNameFor(m => m.Fathername)</label>
                        <div class="input-group input-group-sm">
                            <input id="f_fathernameQuery"
                                   class="form-control text-filter-input"
                                   placeholder="@Html.DisplayNameFor(m => m.Fathername)" />
                            <select id="f_fathernameNull" class="form-select null-filter-select">
                                <option value="">Hamısı</option>
                                <option value="notnull">Dolu</option>
                                <option value="null">Boş</option>
                            </select>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="row g-2 mb-3 filter-row-equal">
                    <div class="col-4">
                        <label for="f_rejectionInfoQuery">@Html.DisplayNameFor(m => m.RejectionInfo)</label>
                        <div class="input-group input-group-sm">
                            <textarea id="f_rejectionInfoQuery"
                                      class="form-control form-control-sm filter-el"
                                      placeholder="@Html.DisplayNameFor(m => m.RejectionInfo)"
                                      rows="2"
                                      style="resize: vertical;"></textarea>
                            <select id="f_rejectionInfoNull" class="form-select null-filter-select">
                                <option value="">Hamısı</option>
                                <option value="notnull">Dolu</option>
                                <option value="null">Boş</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-4">
                        <label for="f_sentBackInfoQuery">@Html.DisplayNameFor(m => m.SentBackInfo)</label>
                        <div class="input-group input-group-sm">
                            <textarea id="f_sentBackInfoQuery"
                                      class="form-control form-control-sm filter-el"
                                      placeholder="@Html.DisplayNameFor(m => m.SentBackInfo)"
                                      rows="2"
                                      style="resize: vertical;"></textarea>
                            <select id="f_sentBackInfoNull" class="form-select null-filter-select">
                                <option value="">Hamısı</option>
                                <option value="notnull">Dolu</option>
                                <option value="null">Boş</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-4">
                        <label for="f_noteQuery">@Html.DisplayNameFor(m => m.Note)</label>
                        <div class="input-group input-group-sm">
                            <textarea id="f_noteQuery"
                                      class="form-control form-control-sm filter-el"
                                      placeholder="@Html.DisplayNameFor(m => m.Note)"
                                      rows="2"
                                      style="resize: vertical;"></textarea>
                            <select id="f_noteNull" class="form-select null-filter-select">
                                <option value="">Hamısı</option>
                                <option value="notnull">Dolu</option>
                                <option value="null">Boş</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="button" id="applyFilters" class="btn btn-primary btn-sm">Tətbiq et</button>
                    <button type="button" id="resetFilters" class="btn btn-outline-secondary btn-sm">Sıfırla</button>
                </div>
            </div>
        </div>


    </div>
</div>

<table id="informationsTable" class="table table-bordered table-sm w-100" style="font-size: 0.8rem;">
    <thead>
        <tr>
            <th>Göndərən h/h</th>
            <th>Hərbi hissə</th>
            <th>Göndərilmə №</th>
            <th>Göndərilmə tarixi</th>
            <th>Daxil olma №</th>
            <th>Daxil olma tarixi</th>
            <th>Rütbə</th>
            <th>Rəsmiləşdirildiyi vəzifə</th>
            <th>Vəzifə</th>
            <th>Soyad</th>
            <th>Ad</th>
            <th>Ata adı</th>
            <th>Təyin olunma tarixi</th>
            <th>Buraxılış forması</th>
            <th>DTX-a göndərilmə №</th>
            <th>DTX-a göndərilmə tarixi</th>
            <th>İcraçı</th>
            <th>Vərəqə №</th>
            <th>Vərəqə tarixi</th>
            <th>İmtina</th>
            <th>Geri qaytarılma</th>
            <th>Qeyd</th>
            <th>Əməliyyatlar</th>
        </tr>
    </thead>
</table>

<div class="modal fade" id="importModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Məlumatların idxalı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <a asp-controller="Export" asp-action="Template" class="btn btn-outline-primary btn-sm">Şablonu yüklə</a>
                </div>
                <div class="mb-3">
                    <label class="form-label">Fayl seçin (.xlsx və ya .csv)</label>
                    <input type="file" id="importFile" class="form-control" accept=".xlsx,.csv" />
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="useAsDbCheck" />
                    <label class="form-check-label text-danger" for="useAsDbCheck">
                        Bazanı sıfırla (mövcud məlumatlar silinəcək!)
                    </label>
                </div>
                <div id="importResult" class="d-none"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Bağla</button>
                <button type="button" id="importBtn" class="btn btn-primary">İdxal et</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Silmə təsdiqi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">Bu məlumatı silmək istədiyinizə əminsiniz?</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Xeyr</button>
                <button type="button" id="confirmDeleteBtn" class="btn btn-danger">Sil</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/information-index.js" asp-append-version="true"></script>
}
