@model List<MilitaryRank>
@{
    ViewData["Title"] = "Hərbi rütbələr";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Hərbi rütbələr</h4>
    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#upsertModal" onclick="openCreate()">Yeni rütbə</button>
</div>

<table id="lookupTable" class="table table-striped table-sm w-100">
    <thead>
        <tr>
            <th>Ad</th>
            <th style="width: 150px;">Əməliyyatlar</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].Name</td>
                <td>
                    <button class="btn btn-warning btn-sm edit-btn" data-id="@Model[i].Id" data-name="@Model[i].Name">Redaktə</button>
                    <button class="btn btn-danger btn-sm delete-btn" data-id="@Model[i].Id">Sil</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="upsertModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="upsertTitle">Yeni rütbə</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editId" />
                <div class="mb-3">
                    <label class="form-label">Ad</label>
                    <input type="text" id="nameInput" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ləğv et</button>
                <button type="button" id="saveBtn" class="btn btn-primary" onclick="save()">Yadda saxla</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Silmə təsdiqi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">Bu rütbəni silmək istədiyinizə əminsiniz?</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Xeyr</button>
                <button type="button" id="confirmDeleteBtn" class="btn btn-danger">Sil</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var lookupConfig = {
            createUrl: '@Url.Action("CreateMilitaryRank", "Lookups")',
            updateUrl: '@Url.Action("UpdateMilitaryRank", "Lookups")',
            deleteUrl: '@Url.Action("DeleteMilitaryRank", "Lookups")',
            entityName: 'rütbə',
            fieldName: 'name'
        };
    </script>
    <script src="~/js/lookups.js" asp-append-version="true"></script>
}
