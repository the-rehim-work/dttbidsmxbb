@using dttbidsmxbb.Models.Enum
@{
    ViewData["Title"] = "Məlumatlar";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Məlumatlar</h4>
    <div class="d-flex gap-2">
        <div class="form-check form-switch d-flex align-items-center me-3">
            <input class="form-check-input" type="checkbox" id="showDeletedToggle" />
            <label class="form-check-label ms-2" for="showDeletedToggle">Silinmişləri göstər</label>
        </div>
        <div class="btn-group">
            <a asp-controller="Export" asp-action="Excel" class="btn btn-success btn-sm">Excel</a>
            <a asp-controller="Export" asp-action="Pdf" class="btn btn-danger btn-sm">PDF</a>
            <a asp-controller="Export" asp-action="Word" class="btn btn-info btn-sm text-white">Word</a>
        </div>
        <button type="button" class="btn btn-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#importModal">İdxal</button>
        <a asp-controller="Informations" asp-action="Create" class="btn btn-primary btn-sm">Yeni məlumat</a>
    </div>
</div>

<div class="accordion mb-3" id="filterAccordion">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button py-2" type="button" data-bs-toggle="collapse" data-bs-target="#filterPanel" aria-expanded="true" aria-controls="filterAccordion">
                <span class="me-2">Filtrlər</span>
                <span id="activeFilterCount" class="badge bg-primary d-none">0</span>
            </button>
        </h2>
        <div id="filterPanel" class="accordion-collapse collapse show" data-bs-parent="#filterAccordion">
            <div class="accordion-body py-3">

                <div class="row g-2 mb-3">
                    <div class="col-2">
                        <label for="f_senderMilitaryBaseIds">Göndərən Hərbi hissə</label>
                        <select id="f_senderMilitaryBaseIds"
                                class="form-control w-100 filter-select2"
                                asp-items="ViewBag.MilitaryBases"
                                multiple>
                        </select>
                    </div>

                    <div class="col-2">
                        <label for="f_militaryBaseIds">Hərbi hissə</label>
                        <select id="f_militaryBaseIds"
                                class="form-control w-100 filter-select2"
                                asp-items="ViewBag.MilitaryBases"
                                multiple>
                        </select>
                    </div>

                    <div class="col-2">
                        <label class="form-label form-label-sm">Göndərilmə nömrəsi</label>
                        <div class="input-group input-group-sm">
                            <input type="text" id="" class="form-control text-filter-input" placeholder="0/0" />
                        </div>
                    </div>

                    <div class="col-2">
                        <label for="">Göndərilmə tarixi</label>
                        <input id=""
                               class="form-control form-control-sm w-100 filter-el"
                               placeholder="Göndərilmə tarixi (aralıq)"
                               autocomplete="off" />
                    </div>
                    
                    <div class="col-2">
                        <label class="form-label form-label-sm">DTTBİ-ə daxil olma nömrəsi</label>
                        <div class="input-group input-group-sm">
                            <input type="text" id="" class="form-control text-filter-input" placeholder="0/0" />
                        </div>
                    </div>

                    <div class="col-2">
                        <label for="">DTTBİ-ə daxil olma tarixi</label>
                        <input id=""
                               class="form-control form-control-sm w-100 filter-el"
                               placeholder="DTTBİ-ə daxil olma tarixi (aralıq)"
                               autocomplete="off" />
                    </div>
                </div>

                <div class="row g-2 mb-3">
                    <div class="col-2">
                        <label class="form-label form-label-sm">Tələb olunan buraxılışlın forması</label>
                        <select id="f_privacyLevels" class="filter-select2" multiple>
                            <option value="@((int)PrivacyLevel.TopSecret)">Tam məxfi</option>
                            <option value="@((int)PrivacyLevel.Secret)">Məxfi</option>
                        </select>
                    </div>

                    <div class="col-2">
                        <label class="form-label form-label-sm">Buraxılışın DTX-a göndərilmə nömrəsi</label>
                        <div class="input-group input-group-sm">
                            <input type="text" id="" class="form-control text-filter-input" placeholder="0/0" />
                            <select id="" class="form-select null-filter-select">
                                <option value="">Hamısı</option>
                                <option value="notnull">Dolu</option>
                                <option value="null">Boş</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-2">
                        <label for="">Buraxılışın DTX-a göndərilmə tarixi</label>
                        <input id=""
                               class="form-control form-control-sm w-100 filter-el"
                               placeholder="Buraxılışın DTX-a göndərilmə tarixi (aralıq)"
                               autocomplete="off" />
                        <select id="" class="form-select null-filter-select">
                            <option value="">Hamısı</option>
                            <option value="notnull">Dolu</option>
                            <option value="null">Boş</option>
                        </select>
                    </div>

                    <div class="col-2">
                        <label for="f_executorIds">İcraçı</label>
                        <select id="f_executorIds"
                                class="form-control w-100 filter-select2"
                                asp-items="ViewBag.Executors"
                                multiple>
                        </select>
                    </div>

                    <div class="col-2">
                        <label class="form-label form-label-sm">Rəsmiləşdirilmiş buraxılış vərəqəsinin nömrəsi</label>
                        <div class="input-group input-group-sm">
                            <input type="text" id="" class="form-control text-filter-input" placeholder="0/0" />
                            <select id="" class="form-select null-filter-select">
                                <option value="">Hamısı</option>
                                <option value="notnull">Dolu</option>
                                <option value="null">Boş</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="col-2">
                        <label for="">Rəsmiləşdirilmiş buraxılış vərəqəsinin tarixi</label>
                        <input id=""
                               class="form-control form-control-sm w-100 filter-el"
                               placeholder="Rəsmiləşdirilmiş buraxılış vərəqəsinin tarixi (aralıq)"
                               autocomplete="off" />
                    </div>
                </div>

                <hr />

                <div class="row g-2 mb-3">
                    <div class="col-2">
                        <label for="f_militaryRankIds">Buraxılışı rəsmiləşdirilən şəxsin rütbəsi</label>
                        <select id="f_militaryRankIds"
                                class="form-control w-100 filter-select2"
                                asp-items="ViewBag.MilitaryRanks"
                                multiple>
                        </select>
                    </div>

                    @* Buraxılışın rəsmiləşdirildiyi vəzifə *@

                    @* Buraxılışı rəsmiləşdirilən şəxsin vəzifəsi *@

                    <div class="col-2">
                        <label class="form-label form-label-sm">Soyad</label>
                        <div class="input-group input-group-sm">
                            <input type="text" id="f_lastnameQuery" class="form-control text-filter-input" placeholder="Axtar..." />
                            <select id="f_lastnameNull" class="form-select null-filter-select">
                                <option value="">Hamısı</option>
                                <option value="notnull">Dolu</option>
                                <option value="null">Boş</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-2">
                        <label class="form-label form-label-sm">Ad</label>
                        <div class="input-group input-group-sm">
                            <input type="text" id="f_firstnameQuery" class="form-control text-filter-input" placeholder="Axtar..." />
                            <select id="f_firstnameNull" class="form-select null-filter-select">
                                <option value="">Hamısı</option>
                                <option value="notnull">Dolu</option>
                                <option value="null">Boş</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-2">
                        <label class="form-label form-label-sm">Ata adı</label>
                        <div class="input-group input-group-sm">
                            <input type="text" id="f_fathernameQuery" class="form-control text-filter-input" placeholder="Axtar..." />
                            <select id="f_fathernameNull" class="form-select null-filter-select">
                                <option value="">Hamısı</option>
                                <option value="notnull">Dolu</option>
                                <option value="null">Boş</option>
                            </select>
                        </div>
                    </div>

                    @* Buraxılışlı vəzifəyə təyin olunma tarixi *@
                </div>

                <hr />

                <div class="row g-2 mb-3">
                    <div class="col-4">
                        <label class="form-label form-label-sm">DTX tərəfindən şəxsin buraxılış sənədlərinə <br /> imtina bildirilməsi barədə məlumat</label>
                        <div class="input-group input-group-sm">
                            <textarea id="f_rejectionInfoQuery"
                                      class="form-control form-control-sm filter-el"
                                      placeholder="DTX tərəfindən şəxsin buraxılış sənədlərinə imtina bildirilməsi barədə məlumat"
                                      rows="2"
                                      style="resize: vertical;"></textarea>
                            <select id="f_rejectionInfoNull" class="form-select null-filter-select">
                                <option value="">Hamısı</option>
                                <option value="notnull">Dolu</option>
                                <option value="null">Boş</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-4">
                        <label class="form-label form-label-sm">Şəxslərin buraxılış sənədlərini rəsmiləşdirilmədən h/h-ə <br /> geri qaytarılması barədə məlumat</label>
                        <div class="input-group input-group-sm">
                            <textarea id="f_sentBackInfoQuery"
                                      class="form-control form-control-sm filter-el"
                                      placeholder="Şəxslərin buraxılış sənədlərini rəsmiləşdirilmədən h/h-ə geri qaytarılması barədə məlumat"
                                      rows="2"
                                      style="resize: vertical;"></textarea>
                            <select id="f_sentBackInfoNull" class="form-select null-filter-select">
                                <option value="">Hamısı</option>
                                <option value="notnull">Dolu</option>
                                <option value="null">Boş</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-4">
                        <label class="form-label form-label-sm"><br />Qeyd</label>
                        <div class="input-group input-group-sm">
                            <textarea id="f_noteQuery"
                                      class="form-control form-control-sm filter-el"
                                      placeholder="Qeyd"
                                      rows="2"
                                      style="resize: vertical;"></textarea>
                            <select id="f_noteInfoNull" class="form-select null-filter-select">
                                <option value="">Hamısı</option>
                                <option value="notnull">Dolu</option>
                                <option value="null">Boş</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="button" id="applyFilters" class="btn btn-primary btn-sm">Tətbiq et</button>
                    <button type="button" id="resetFilters" class="btn btn-outline-secondary btn-sm">Sıfırla</button>
                </div>
            </div>
        </div>


    </div>
</div>

<table id="informationsTable" class="table table-bordered table-sm w-100" style="font-size: 0.8rem;">
    <thead>
        <tr>
            <th>Göndərən h/h</th>
            <th>Hərbi hissə</th>
            <th>Göndərilmə №</th>
            <th>Göndərilmə tarixi</th>
            <th>Daxil olma №</th>
            <th>Daxil olma tarixi</th>
            <th>Rütbə</th>
            <th>Rəsmiləşdirildiyi vəzifə</th>
            <th>Vəzifə</th>
            <th>Soyad</th>
            <th>Ad</th>
            <th>Ata adı</th>
            <th>Təyin olunma tarixi</th>
            <th>Buraxılış forması</th>
            <th>DTX-a göndərilmə №</th>
            <th>DTX-a göndərilmə tarixi</th>
            <th>İcraçı</th>
            <th>Vərəqə №</th>
            <th>Vərəqə tarixi</th>
            <th>İmtina</th>
            <th>Geri qaytarılma</th>
            <th>Qeyd</th>
            <th>Əməliyyatlar</th>
        </tr>
    </thead>
</table>

<div class="modal fade" id="importModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Məlumatların idxalı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <a asp-controller="Export" asp-action="Template" class="btn btn-outline-primary btn-sm">Şablonu yüklə</a>
                </div>
                <div class="mb-3">
                    <label class="form-label">Fayl seçin (.xlsx və ya .csv)</label>
                    <input type="file" id="importFile" class="form-control" accept=".xlsx,.csv" />
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="useAsDbCheck" />
                    <label class="form-check-label text-danger" for="useAsDbCheck">
                        Bazanı sıfırla (mövcud məlumatlar silinəcək!)
                    </label>
                </div>
                <div id="importResult" class="d-none"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Bağla</button>
                <button type="button" id="importBtn" class="btn btn-primary">İdxal et</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Silmə təsdiqi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">Bu məlumatı silmək istədiyinizə əminsiniz?</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Xeyr</button>
                <button type="button" id="confirmDeleteBtn" class="btn btn-danger">Sil</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/information-index.js" asp-append-version="true"></script>
}
