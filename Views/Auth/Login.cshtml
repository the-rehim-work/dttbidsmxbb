@{
    ViewData["Title"] = "Giriş";
    Layout = null;
}

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş — XNB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex align-items-center justify-content-center" style="min-height: 100vh; background: #f0f2f5;">
    <div class="card shadow-sm" style="width: 400px;">
        <div class="card-body p-4">
            <div class="text-center mb-4">
                <img src="~/assets/500px-azerbaijan_mod_badge.svg.png" alt="Logo" style="width: 80px;" />
                <h5 class="mt-3">Xidmətə nəzarət və fiziki təhlükəsizlik məlumat bazası</h5>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger py-2">@ViewBag.Error</div>
            }

            <form method="post" asp-action="Login" asp-controller="Auth">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

                <div class="mb-3">
                    <label class="form-label">İstifadəçi adı</label>
                    <input type="text" name="username" class="form-control" autofocus required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Şifrə</label>
                    <input type="password" name="password" class="form-control" required />
                </div>

                <button type="submit" class="btn btn-primary w-100">Daxil ol</button>
            </form>
        </div>
    </div>
</body>
</html>
