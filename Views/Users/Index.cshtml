@{
    ViewData["Title"] = "İstifadəçilər";
    var users = ViewBag.Users as List<dynamic>;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">İstifadəçilər</h4>
    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#upsertUserModal" onclick="openCreateUser()">Yeni istifadəçi</button>
</div>

<table id="usersTable" class="table table-striped table-sm w-100">
    <thead>
        <tr>
            <th>İstifadəçi adı</th>
            <th>Ad Soyad</th>
            <th>Rol</th>
            <th>Əməliyyatlar</th>
        </tr>
    </thead>
    <tbody>
        @if (users != null)
        {
            foreach (var u in users)
            {
                <tr>
                    <td>@u.UserName</td>
                    <td>@u.FullName</td>
                    <td>@u.Roles</td>
                    <td>
                        <button class="btn btn-warning btn-sm edit-btn"
                                data-id="@u.Id"
                                data-fullname="@u.FullName"
                                data-username="@u.UserName"
                                data-role="@u.Roles">
                            Redaktə
                        </button>
                        <button class="btn btn-info btn-sm text-white reset-btn"
                                data-id="@u.Id">
                            Şifrə
                        </button>
                        <button class="btn btn-danger btn-sm delete-btn"
                                data-id="@u.Id">
                            Sil
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="modal fade" id="upsertUserModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="upsertUserTitle">Yeni istifadəçi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="userId" />
                <div class="mb-3">
                    <label class="form-label">Ad Soyad</label>
                    <input type="text" id="fullName" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">İstifadəçi adı</label>
                    <input type="text" id="userName" class="form-control" />
                </div>
                <div id="passwordGroup">
                    <div class="mb-3">
                        <label class="form-label">Şifrə</label>
                        <input type="password" id="password" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Şifrə təsdiqi</label>
                        <input type="password" id="confirmPassword" class="form-control" />
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Rol</label>
                    <select id="role" asp-items="@ViewBag.Roles" class="form-select">
                        <option value="">Seçin...</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ləğv et</button>
                <button type="button" id="saveUserBtn" class="btn btn-primary">Yadda saxla</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteUserModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Silmə təsdiqi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">Bu istifadəçini silmək istədiyinizə əminsiniz?</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Xeyr</button>
                <button type="button" id="confirmDeleteUserBtn" class="btn btn-danger">Sil</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="resetPasswordModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Şifrəni sıfırla</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="resetUserId" />
                <div class="mb-3">
                    <label class="form-label">Yeni şifrə</label>
                    <input type="password" id="newPassword" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Şifrə təsdiqi</label>
                    <input type="password" id="confirmNewPassword" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ləğv et</button>
                <button type="button" id="resetPasswordBtn" class="btn btn-primary">Sıfırla</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/users.js" asp-append-version="true"></script>
}
